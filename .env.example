# ===========================================
# ClawVerse.io — Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values.

# -------------------------------------------
# Supabase
# -------------------------------------------
# Project URL from Supabase dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# Anon (public) key from Supabase dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
# Service role key (server-side only, never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
# Database password (used by migration scripts)
SUPABASE_DB_PASSWORD=your-database-password

# -------------------------------------------
# GitHub
# -------------------------------------------
# Personal access token for GitHub API (star counts, repo sync)
# Create at https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your-github-token

# -------------------------------------------
# External APIs
# -------------------------------------------
# ClawHub API key for skill sync (optional, increases rate limits)
CLAWHUB_API_KEY=your-clawhub-api-key
# VirusTotal API key for security scanning
# Get one at https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# -------------------------------------------
# Cron Jobs
# -------------------------------------------
# Secret token to authenticate cron job requests (legacy path)
CRON_SECRET=your-random-cron-secret
# Optional dedicated HMAC secret for signed cron requests
# If omitted, CRON_SECRET is used for signing too.
CRON_HMAC_SECRET=your-random-cron-hmac-secret
# CSRF signing secret (required in production)
CSRF_SECRET=your-random-csrf-secret

# -------------------------------------------
# App Config
# -------------------------------------------
# Public site URL (used for OAuth callbacks, meta tags, etc.)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Release metadata shown in footer to verify deploy propagation
# Example: v2026.02.14-hotfix.1
NEXT_PUBLIC_RELEASE_VERSION=v0.1.0
# Example: 2026-02-14
NEXT_PUBLIC_RELEASE_DATE=2026-02-14
# Comma-separated admin emails (users allowed to access /admin)
ADMIN_EMAILS=admin@example.com

# -------------------------------------------
# Email (Resend)
# -------------------------------------------
# Resend API key for transactional emails
# Get one at https://resend.com/api-keys
RESEND_API_KEY=re_xxxxx
# From email address (must be verified in Resend)
RESEND_FROM=ClawVerse <noreply@clawverse.io>
# Admin email for security alert notifications
ADMIN_EMAIL=admin@clawverse.io

# -------------------------------------------
# Newsletter
# -------------------------------------------
# Secret token to authenticate newsletter unsubscribe/job features
# Can be same as CRON_SECRET or CRON_HMAC_SECRET. Set separately if you want isolated scope.
NEWSLETTER_CRON_SECRET=your-newsletter-cron-secret

# Metrics / analytics (optional)
# Salt used to hash visitor IP before storing page views.
PAGE_VIEW_IP_SALT=change-me

# Discovery scan (manual)
# Search query used by script/run-discovery.ts
DISCOVERY_GITHUB_QUERY=openclaw OR clawhub OR claw
DISCOVERY_MAX_RESULTS=12
DISCOVERY_DRY_RUN=0
